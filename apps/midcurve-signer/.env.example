# Database
DATABASE_URL="postgresql://user:password@localhost:5432/midcurve"

# Internal API Authentication
# Shared secret for service-to-service auth (midcurve-ui -> midcurve-signer)
# Generate with: openssl rand -base64 32
SIGNER_INTERNAL_API_KEY="your-internal-api-key-here"

# Key Provider Selection
# Set to "true" to use local encrypted keys instead of AWS KMS (development only)
SIGNER_USE_LOCAL_KEYS="true"

# Local Encrypted Provider (development)
# REQUIRED when SIGNER_USE_LOCAL_KEYS="true"
# This key encrypts automation wallet private keys at rest.
# Without this key, the signer will fail to start.
# Generate with: openssl rand -hex 32
SIGNER_LOCAL_ENCRYPTION_KEY="your-64-hex-character-master-key-here"

# AWS KMS Provider (production)
AWS_REGION="us-east-1"
# AWS_KMS_KEY_ARN="arn:aws:kms:us-east-1:123456789012:key/your-key-id"

# SEMSEE EVM (Local Network)
# Local Geth instance for strategy owner lookups
# Note: This is internal-only network access, not external RPC
SEMSEE_RPC_URL="http://localhost:8545"

# Core Orchestrator Address
# Address that receives gas fees from strategy operations and funds GC operations
# This is Foundry's default account 0 (pre-funded during Docker startup)
CORE_ADDRESS="0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266"

# Logging
LOG_LEVEL="debug"
NODE_ENV="development"
