{
  "name": "@midcurve/worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev:pretty": "tsx watch src/main.ts | pino-pretty",
    "start": "node dist/main.js",
    "build": "tsup src/main.ts --format esm --dts --out-dir dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@midcurve/database": "workspace:^",
    "@midcurve/services": "workspace:^",
    "@midcurve/shared": "workspace:^",
    "pino": "^9.9.5",
    "viem": "^2.37.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/ws": "^8.5.10",
    "dotenv": "^17.2.3",
    "pino-pretty": "^13.1.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "20.19.x"
  }
}
