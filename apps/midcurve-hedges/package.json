{
  "name": "@midcurve/hedges",
  "version": "0.1.0",
  "private": true,
  "description": "MidcurveHedgeVault smart contracts - Diamond Pattern implementation",
  "scripts": {
    "forge:build": "forge build",
    "forge:build:sizes": "forge build --sizes",
    "forge:test": "forge test",
    "forge:test:unit": "forge test --match-path 'contracts/test/unit/**' -vvv",
    "forge:test:integration": "forge test --match-path 'contracts/test/integration/**' -vvv --fork-url $RPC_URL_ETHEREUM",
    "forge:fmt": "forge fmt",
    "forge:fmt:check": "forge fmt --check",
    "deploy:production": "./script/deploy-production.sh",
    "deploy:production:dry-run": "DRY_RUN=true ./script/deploy-production.sh",
    "deploy:arbitrum": "forge script script/Deploy.s.sol --rpc-url arbitrum --broadcast --verify",
    "deploy:base": "forge script script/Deploy.s.sol --rpc-url base --broadcast --verify",
    "deploy:ethereum": "forge script script/Deploy.s.sol --rpc-url mainnet --broadcast --verify",
    "deploy:local": "./script/deploy-local.sh"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "diamond-pattern",
    "eip-2535",
    "uniswap-v3",
    "hedge-vault"
  ],
  "engines": {
    "node": "20.19.x"
  }
}
