{
  "name": "@midcurve/evm",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "description": "Local EVM development node for strategy testing",
  "scripts": {
    "build:contracts": "cd contracts && forge build",
    "test:contracts": "cd contracts && forge test -vvv",
    "generate:genesis": "./genesis/generate-genesis.sh",
    "up": "npm run generate:genesis && docker-compose build && docker-compose up -d",
    "down": "docker-compose down",
    "stop": "docker-compose stop",
    "start": "docker-compose start",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f geth-dev",
    "status": "docker-compose ps",
    "reset": "docker-compose down -v && npm run up",
    "health": "curl -s -X POST http://localhost:8555 -H 'Content-Type: application/json' --data '{\"jsonrpc\":\"2.0\",\"method\":\"eth_blockNumber\",\"params\":[],\"id\":1}'",
    "up:prod": "npm run generate:genesis && docker-compose -f docker-compose.yml -f docker-compose.prod.yml build && docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "down:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "reset:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down -v && npm run up:prod",
    "poc:loop": "tsx core/src/poc/durable-await-loop.ts",
    "poc:topology": "tsx core/src/poc/test-topology.ts",
    "poc:strategy-loop": "tsx core/src/poc/test-strategy-loop.ts",
    "poc:executor-pool": "tsx core/src/poc/test-executor-pool.ts",
    "rabbitmq:logs": "docker-compose logs -f rabbitmq",
    "rabbitmq:health": "curl -s -u midcurve:midcurve_dev http://localhost:15672/api/healthchecks/node | jq .",
    "dev": "next dev -p 3002",
    "dev:api": "next dev -p 3002",
    "build:api": "next build",
    "start:api": "next start -p 3002"
  },
  "dependencies": {
    "@midcurve/database": "workspace:*",
    "@midcurve/services": "workspace:*",
    "amqplib": "^0.10.9",
    "nanoid": "^5.0.9",
    "next": "^15.1.3",
    "pino": "^9.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "viem": "^2.21.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": "20.19.x"
  }
}
