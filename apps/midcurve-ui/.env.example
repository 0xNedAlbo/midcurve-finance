# =============================================================================
# API Configuration
# =============================================================================
# API is co-located with UI (same origin)
# API routes at /api/v1/* are served by this same Next.js app
NEXT_PUBLIC_API_URL=http://localhost:3000

# =============================================================================
# NextAuth Configuration
# =============================================================================
# URL where this application is running
NEXTAUTH_URL=http://localhost:3000
# Secret for encrypting session tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32

# =============================================================================
# WalletConnect (RainbowKit) - Required
# =============================================================================
# Get your project ID from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# =============================================================================
# Database Configuration
# =============================================================================
# Development database (port 5432)
DATABASE_URL="postgresql://devuser:devpass@localhost:5432/midcurve_dev?schema=public"

# Test database (port 5433, used by integration tests)
TEST_DATABASE_URL="postgresql://testuser:testpass@localhost:5433/midcurve_test?schema=public"

# =============================================================================
# EVM Chain RPC URLs
# =============================================================================
# Get API keys from: https://alchemy.com or https://infura.io
RPC_URL_ETHEREUM=https://eth-mainnet.g.alchemy.com/v2/your-api-key
RPC_URL_ARBITRUM=https://arb-mainnet.g.alchemy.com/v2/your-api-key
RPC_URL_BASE=https://base-mainnet.g.alchemy.com/v2/your-api-key
RPC_URL_BSC=https://bnb-mainnet.g.alchemy.com/v2/your-api-key
RPC_URL_POLYGON=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
RPC_URL_OPTIMISM=https://opt-mainnet.g.alchemy.com/v2/your-api-key

# =============================================================================
# External API Keys
# =============================================================================
# Etherscan API (for ledger events, block explorer queries)
# Get from: https://etherscan.io/apis
ETHERSCAN_API_KEY=your-etherscan-api-key

# The Graph API (for Uniswap V3 subgraphs)
# Get from: https://thegraph.com/studio
THE_GRAPH_API_KEY=your-graph-api-key

# =============================================================================
# Hyperliquid Integration (Optional)
# =============================================================================
# 32-byte hex key for encrypting Hyperliquid wallet private keys
# Generate with: openssl rand -hex 32
HYPERLIQUID_WALLET_ENCRYPTION_KEY=your-32-byte-hex-key-here

# =============================================================================
# Signer Service Communication
# =============================================================================
# URL of the midcurve-signer service (for KMS-backed automation wallets)
SIGNER_SERVICE_URL=http://localhost:3001

# Shared secret for service-to-service authentication
# Must match the SIGNER_INTERNAL_API_KEY configured in midcurve-signer
# Generate with: openssl rand -base64 32
SIGNER_INTERNAL_API_KEY=your-shared-secret-generate-with-openssl-rand-base64-32

# =============================================================================
# Logging Configuration
# =============================================================================
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
