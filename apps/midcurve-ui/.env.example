# API Configuration
# URL of the @midcurve/api backend (handles all authentication and data)
NEXT_PUBLIC_API_URL=http://localhost:3001

# NextAuth Configuration
# URL where this application is running
NEXTAUTH_URL=http://localhost:3000
# Secret for encrypting session tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32

# WalletConnect (RainbowKit) - Required
# Get your project ID from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Optional: Logging
LOG_LEVEL=info

# Signer Service Communication
# URL of the midcurve-signer service (for KMS-backed automation wallets)
SIGNER_API_URL=http://localhost:3001
# Shared secret for service-to-service auth (same key configured in midcurve-signer)
# Generate with: openssl rand -base64 32
SIGNER_INTERNAL_API_KEY=your-internal-api-key-here
