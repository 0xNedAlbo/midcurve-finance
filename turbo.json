{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "db:generate": {
            "cache": false,
            "outputs": [
                "src/generated/**"
            ]
        },
        "build": {
            "dependsOn": [
                "^db:generate"
            ],
            "outputs": [
                ".next/**",
                "dist/**"
            ],
            "env": [
                "NEXTAUTH_URL",
                "NEXTAUTH_SECRET",
                "DATABASE_URL",
                "RPC_URL_ETHEREUM",
                "RPC_URL_ARBITRUM",
                "RPC_URL_BASE",
                "RPC_URL_BSC",
                "RPC_URL_POLYGON",
                "RPC_URL_OPTIMISM",
                "ETHERSCAN_API_KEY",
                "THE_GRAPH_API_KEY",
                "LOG_LEVEL",
                "NODE_ENV"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^typecheck"
            ]
        },
        "dev": {
            "dependsOn": [
                "^db:generate",
                "^build"
            ],
            "persistent": true,
            "cache": false,
            "env": [
                "NEXTAUTH_URL",
                "NEXTAUTH_SECRET",
                "DATABASE_URL",
                "RPC_URL_ETHEREUM",
                "RPC_URL_ARBITRUM",
                "RPC_URL_BASE",
                "RPC_URL_BSC",
                "RPC_URL_POLYGON",
                "RPC_URL_OPTIMISM",
                "ETHERSCAN_API_KEY",
                "THE_GRAPH_API_KEY",
                "LOG_LEVEL",
                "NODE_ENV"
            ]
        }
    }
}