{
  "name": "@midcurve/services",
  "version": "0.1.0",
  "description": "Shared business logic for Midcurve Finance - concentrated liquidity position management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist",
    "build:docker": "tsup src/index.ts --format esm,cjs --out-dir dist",
    "dev": "tsup src/index.ts --format esm,cjs --dts --out-dir dist --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "node --env-file=.env.test ./node_modules/.bin/vitest",
    "test:run": "node --env-file=.env.test ./node_modules/.bin/vitest run",
    "test:coverage": "node --env-file=.env.test ./node_modules/.bin/vitest run --coverage",
    "test:unit": "vitest --project unit",
    "test:unit:run": "vitest run --project unit",
    "test:integration": "node --env-file=.env.test ./node_modules/.bin/vitest --project integration",
    "test:integration:run": "node --env-file=.env.test ./node_modules/.bin/vitest run --project integration",
    "test:integration:coverage": "node --env-file=.env.test ./node_modules/.bin/vitest run --project integration --coverage",
    "db:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "db:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "db:dev:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d",
    "db:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "db:test:down": "docker-compose -f docker-compose.test.yml down",
    "db:test:reset": "docker-compose -f docker-compose.test.yml down -v && docker-compose -f docker-compose.test.yml up -d",
    "yalc:link": "yalc link @midcurve/shared && npm install",
    "yalc:update": "yalc update @midcurve/shared",
    "yalc:unlink": "yalc remove @midcurve/shared && npm install",
    "yalc:clean": "rimraf .yalc yalc.lock",
    "yalc:publish": "npm run build && yalc publish",
    "yalc:push": "npm run build && yalc push"
  },
  "keywords": [
    "midcurve",
    "defi",
    "concentrated-liquidity",
    "uniswap-v3",
    "orca",
    "raydium",
    "pancakeswap",
    "risk-management"
  ],
  "author": "Midcurve Finance",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/node": "^20.10.0",
    "dotenv-cli": "^10.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0",
    "yalc": "^1.0.0-pre.53"
  },
  "dependencies": {
    "@midcurve/api-shared": "workspace:*",
    "@midcurve/database": "workspace:*",
    "@midcurve/shared": "workspace:*",
    "@paralleldrive/cuid2": "^3.0.6",
    "amqplib": "^0.10.7",
    "@uniswap/sdk-core": "^7.8.0",
    "@uniswap/v3-sdk": "^3.26.0",
    "jsbi": "^4.3.2",
    "nanoid": "^5.1.6",
    "pino": "^10.0.0",
    "tsup": "^8.5.0",
    "viem": "^2.38.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}